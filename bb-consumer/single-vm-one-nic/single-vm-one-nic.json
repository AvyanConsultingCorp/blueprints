{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for the virtual machine."
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for the infrastructure."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vmTemplate": "[uri(deployment().properties.templateLink.uri, 'Blocks/bb-single-vm-1-nic.json')]",
    "vnetTemplate": "[uri(deployment().properties.templateLink.uri, 'Blocks/bb-vnet-1-subnet.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "copy": {
        "count": 2,
        "name": "storageAccountLoop"
      },
      "apiVersion": "2015-06-15",
      "name": "[parameters('infrastructureSettings').storageAccounts[copyIndex()].name]",
      "location": "[variables('location')]",
      "properties": { "accountType": "[parameters('infrastructureSettings').storageAccounts[copyIndex()].type]" }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "vnet",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('vnetTemplate')]" },
        "parameters": {
          "vnetConfig": { "value": "[parameters('infrastructureSettings').vnetConfig]" },
          "subnetConfig": { "value": "[parameters('infrastructureSettings').subnetConfig]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "vm",
      "dependsOn": [ "Microsoft.Resources/deployments/vnet" ],
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('vnetTemplate')]" },
        "parameters": {
          "vmComputerName": { "value": "[concat(parameters('virtualMachineSettings').appName,'-',parameters('virtualMachineSettings').appType,'-vm')]" },
          "vmSize": {"value": "[parameters('virtualMachineSettings').size]"},
          "diagStorageConfig": { "value": "[parameters('infrastructureSettings').storageAccounts[0]]" },
          "vhdStorageConfig": {"value": "[parameters('infrastructureSettings').storageAccounts[1]]"},
          "osType": { "value": "[parameters('virtualMachineSettings').osType]" },
          "snid": { "value": "[concat(reference('vnet').outputs.vnetId.value,'/subnets/',parameters('infrastructureSettings').subnetConfig.name)]" },
          "adminUsername": { "value": "[parameters('virtualMachineSettings').adminUsername]" },
          "adminPassword": { "value": "[parameters('virtualMachineSettings').adminPassword]" },
          "osProfile": {"value": "[parameters('virtualMachineSettings').osProfile.windows"}
        }
      }
    }
  ],
  "outputs": {
  }
}

