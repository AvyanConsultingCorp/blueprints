{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines"
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    },
    "loadBalancerSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    },
    "storageAccountsCount": { "type": "int" },
    "vmCount": { "type": "int" },
    "vmStartIndex": { "type": "int" }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "multiVMTemplate": "[uri(deployment().properties.templateLink.uri, '../Multi-vm-n-nic-m-storage/azuredeploy.json')]",
    "vmPrefix": "[concat(parameters('infrastructureSettings').baseName, '-', parameters('virtualMachinesSettings').namePrefix, '-vm')]",
    "scriptPath": "[uri(deployment().properties.templateLink.uri, '../../resources/virtualMachines/extensions/linux/enable-ip-forwarding/enable-ip-forwarding.sh')]",
    "extensionTemplate": "https://raw.githubusercontent.com/benofben/azure-resource-manager-dse/master/extensions/node.sh",
    "datacenterName" :  "dc-eastus2"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "CassandraVMSDeployTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('multiVMTemplate')]" },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" },
          "infrastructureSettings": { "value": "[parameters('infrastructureSettings')]" },
          "storageAccountsCount": { "value": "[parameters('storageAccountsCount')]" },
          "vmCount": { "value": "[parameters('vmCount')]" },
          "vmStartIndex": { "value": "[parameters('vmStartIndex')]" }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2015-06-15",      
      "name": "[concat(variables('vmPrefix'), add(parameters('vmStartIndex'), copyindex()), '/installdsenode')]",
      "copy": {
        "count": "[parameters('vmCount')]",
        "name": "xtensionsloop"
      },
      "dependsOn": [
        "Microsoft.Resources/deployments/CassandraVMSDeployTemplate",
        "Microsoft.Resources/deployments/deploy-route-table"
      ],
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.5",
        "settings": {
          "fileUris": "[variables('extensionTemplate')]",
          "commandToExecute": "[concat('bash node.sh ',variables('location'),' ', variables('uniqueString'), ' ',variables('datacenterName'))]"
        }
      }
    }
  ]
}
