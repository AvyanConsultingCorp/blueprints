{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": {
      "type": "string",
      "maxLength": 10,
      "metadata": { "description": "Base name" }
    }
  },
  "variables": {
    "osTypeWindows": "Windows",
    "osTypeUbuntu": "Ubuntu",

    "vnetName": "[concat(parameters('baseName'),'-vnet')]",
    "vnetPrefix": "10.0.0.0/16",
    "vnetManageSubnetPrefix": "10.0.0.0/24",
    "vnetNVAFrontSubnetPrefix": "10.0.1.0/24",
    "vnetNVABackSubnetPrefix": "10.0.2.0/24",
    "vnetWebSubnetPrefix": "10.0.3.0/24",
    "vnetBizSubnetPrefix": "10.0.4.0/24",
    "vnetDBSubnetPrefix": "10.0.5.0/24",
    "vnetGatewaySubnetPrefix": "10.0.255.224/27",

    "vnetManageSubnetName": "[concat(parameters('baseName'),'-manage-subnet')]",
    "vnetNVAFrontSubnetName": "[concat(parameters('baseName'),'-nva-fe-subnet')]",
    "vnetNVABackSubnetName": "[concat(parameters('baseName'),'-nva-be-subnet')]",
    "vnetWebSubnetName": "[concat(parameters('baseName'),'-web-subnet')]",
    "vnetBizSubnetName": "[concat(parameters('baseName'),'-biz-subnet')]",
    "vnetDBSubnetName": "[concat(parameters('baseName'),'-db-subnet')]"
  },
  "resources": [
    {
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "vnet"
      },
      "properties": {
        "mode": "Incremental",
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vnetManageSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetManageSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('vnetNVAFrontSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetNVAFrontSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('vnetNVABackSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetNVABackSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('vnetWebSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetWebSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('vnetBizSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetBizSubnetPrefix')]"
            }
          },
          {
            "name": "[variables('vnetDBSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetDBSubnetPrefix')]"
            }
          }
        ]
      }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "biztier-create",
      "dependsOn": [ "[concat('Microsoft.Network/virtualNetworks/',variables('vnetName'))]" ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('createIlbBackend')]"
        },
        "parameters": {
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "baseName": { "value": "[parameters('baseName')]" },
          "subnetNamePrefix": { "value": "[variables('bizSubnetNamePrefix')]" },
          "ilbIpAddress": { "value": "[variables('bizIlbIpAddress')]" },
          "osType": { "value": "[variables('bizOsType')]" },
          "subnetId": { "value": "[concat(resourceId('Microsoft.Network/virtualNetworks',variables('vnetName')),'/subnets/',variables('vnetBizSubnetName'))]" },
          "numberVMs": { "value": "[variables('bizNumberVMs')]" },
          "vmNamePrefix": { "value": "[variables('bizVmNamePrefix')]" },
          "vmComputerName": { "value": "[variables('bizVmComputerNamePrefix')]" }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "dbtier-create",
      "dependsOn": [ "[concat('Microsoft.Network/virtualNetworks/',variables('vnetName'))]" ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('createIlbBackend')]"
        },
        "parameters": {
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "baseName": { "value": "[parameters('baseName')]" },
          "subnetNamePrefix": { "value": "[variables('dbSubnetNamePrefix')]" },
          "ilbIpAddress": { "value": "[variables('dbIlbIpAddress')]" },
          "osType": { "value": "[variables('dbOsType')]" },
          "subnetId": { "value": "[concat(resourceId('Microsoft.Network/virtualNetworks',variables('vnetName')),'/subnets/',variables('vnetDBSubnetName'))]" },
          "numberVMs": { "value": "[variables('dbNumberVMs')]" },
          "vmNamePrefix": { "value": "[variables('dbVmNamePrefix')]" },
          "vmComputerName": { "value": "[variables('dbVmComputerNamePrefix')]" }
        }
      }
    }

  ],
  "outputs": {
  }
}
