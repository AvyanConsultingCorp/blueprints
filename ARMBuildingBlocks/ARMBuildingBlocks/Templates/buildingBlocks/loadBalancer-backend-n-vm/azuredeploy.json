{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "loadBalancerSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    },
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines"
      }
    },
    "virtualNetworkSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual network"
      }
    },
    "buildingBlockSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for building block"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "namePrefix": "[parameters('loadBalancerSettings').namePrefix]",
    "lbName": "[concat(variables('namePrefix'), '-ilb')]",
    "backendPoolName": "[concat(variables('lbName'), '-bep1')]",
    "loadBalancerTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/loadBalancer/loadBalancer.json')]",
    "multiVMTemplate": "[uri(deployment().properties.templateLink.uri, '../Multi-vm-n-nic-m-storage/azuredeploy.json')]",
    "backendPoolNicTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/loadBalancer/lb-add-backendPool-nics.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "multiVMDeployTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('multiVMTemplate')]" },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" },
          "virtualNetworkSettings": { "value": "[parameters('virtualNetworkSettings')]" },
          "buildingBlockSettings": { "value": "[parameters('buildingBlockSettings')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "loadBalancerTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('loadBalancerTemplate')]" },
        "parameters": {
          "loadBalancerSettings": { "value": "[parameters('loadBalancerSettings')]" },
          "virtualNetworkSettings": { "value": "[parameters('virtualNetworkSettings')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "AddNicsToBackendPool",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'multiVMDeployTemplate')]",
        "[concat('Microsoft.Resources/deployments/', 'loadBalancerTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('backendPoolNicTemplate')]" },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" },
          "vnetName": { "value": "[parameters('virtualNetworkSettings').name]" },
          "vmStartIndex": { "value": "[parameters('buildingBlockSettings').vmStartIndex]" },
          "vmCount": { "value": "[parameters('buildingBlockSettings').vmCount]" },
          "loadBalancerName": { "value": "[variables('lbName')]" },
          "backendPools": { "value": "[parameters('loadBalancerSettings').backendPools]" }
        }
      }
    }
  ],
  "outputs": {

  }
}
