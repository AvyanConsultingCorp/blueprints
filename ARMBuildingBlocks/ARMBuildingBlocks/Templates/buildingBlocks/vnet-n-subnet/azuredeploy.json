{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual network"
      }
    }
  },
  "variables": {
    "virtualNetworkTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/virtualNetworks/virtualNetwork.json')]",
    "vnetName": "[parameters('virtualNetworkSettings').name]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('vnetName'), '-template')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('virtualNetworkTemplate')]"
        },
        "parameters": {
          "virtualNetworkSettings": {
            "value": "[parameters('virtualNetworkSettings')]"
          }
        }
      }
    }
  ]
}
