{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": { "type": "string" },
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines"
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    }

  },
  "variables": {
    "location": "[resourceGroup().location]",
    "storageAccountIdentifier": "[toLower(concat(replace(parameters('baseName'),'-',''), uniqueString(resourceGroup().id)))]",
    "networkResourcePrefix": "[concat(parameters('baseName'), '-', parameters('infrastructureSettings').subnetNamePrefix)]",
    "internalLoadBalancer": {
      "name": "[concat(variables('networkResourcePrefix'), '-ilb')]",
      "backendPoolName": "[concat(variables('networkResourcePrefix'), '-bep')]",
      "id": "[resourceId('Microsoft.Network/loadBalancers', concat(variables('networkResourcePrefix'), '-ilb'))]",
      "backendPoolId": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', concat(variables('networkResourcePrefix'), '-ilb'), concat(variables('networkResourcePrefix'), '-bep'))]",
      "frontendIpConfigId": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', concat(variables('networkResourcePrefix'), '-ilb'), '-ipconfig1')]",
      "privateIpAddress": "[parameters('infrastructureSettings').ilbIpAddress]"
    },
    "virtualNetwork": {
      "id": "[resourceId(parameters('infrastructureSettings').vnetResourceGroup, 'Microsoft.Network/virtualNetworks', parameters('infrastructureSettings').vnetName)]",
      "subnetId": "[concat(resourceId(parameters('infrastructureSettings').vnetResourceGroup, 'Microsoft.Network/virtualNetworks', parameters('infrastructureSettings').vnetName), '/subnets/', parameters('infrastructureSettings').subnetName)]"
    },
    "path": {
      "vmTemplate": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Templates/bb-n-vm-n-nic-lbbe.json",
      "nicTemplate": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Templates/bb-nic.json",
      "ilbTemplate": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Templates/bb-ilb.json"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "deploy-ilb",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('path').ilbTemplate]"
        },
        "parameters": {
          "ilbSettings": { "value": "[variables('internalLoadBalancer')]" },
          "networkSettings": { "value": "[variables('virtualNetwork')]" }
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2015-06-15",
      "location": "[variables('location')]",
      "name": "[concat(variables('storageAccountIdentifier'), copyindex(1))]",
      "copy": {
        "name": "storageLoop",
        "count": "[parameters('virtualMachinesSettings').count]"
      },
      "properties": { "accountType": "Premium_LRS" }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(parameters('baseName'), copyindex(1))]",
      "copy": {
        "name": "vmCount",
        "count": "[parameters('virtualMachinesSettings').count]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('path').vmTemplate]"
        },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" },
          "infrastructureSettings": { "value": "[parameters('infrastructureSettings')]" },
          "miscSettings": {
            "value": {
              "ilbbackendPoolId": "[reference('deploy-ilb').outputs.ilbBackendPoolId.value]",
              "storageAccountName": "[concat(variables('storageAccountIdentifier'), copyindex(1))]",
              "subnetId": "[variables('virtualNetwork').subnetId]",
              "vmName": "[concat(parameters('baseName'),'-',parameters('virtualMachinesSettings').computerNamePrefix,'-vm', copyIndex(1))]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/loadBalancers', variables('internalLoadBalancer').name)]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountIdentifier'), parameters('virtualMachinesSettings').count)]"
      ]
    }
  ],
  "outputs": {
  }
}
