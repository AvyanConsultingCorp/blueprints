{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": { "type": "string" },
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines"
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    },
    "loadBalancerSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "subnetNamePrefix": "[parameters('infrastructureSettings').subnetNamePrefix]",
    "lbName": "[concat(parameters('baseName'), '-', variables('subnetNamePrefix'), '-ilb')]",
    "bepName": "[concat(parameters('baseName'), '-', variables('subnetNamePrefix'), '-bep')]",
    "internalLoadBalancer": {
      "name": "[variables('lbName')]",
      "id": "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]",
      "backendPoolName": "[variables('bepName')]",
      "backendPoolId": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', variables('lbName'), variables('bepName'))]",
      "frontendIpConfigId": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', variables('lbName'), 'ipconfig1')]"
    },
    "virtualNetwork": {
      "id": "[resourceId(parameters('infrastructureSettings').vnetResourceGroup, 'Microsoft.Network/virtualNetworks', parameters('infrastructureSettings').vnetName)]",
      "subnetId": "[concat(resourceId(parameters('infrastructureSettings').vnetResourceGroup, 'Microsoft.Network/virtualNetworks', parameters('infrastructureSettings').vnetName), '/subnets/', parameters('infrastructureSettings').subnetName)]"
    },
    "vmAvailabilitySetName": "[concat(parameters('baseName'),'-',parameters('virtualMachinesSettings').namePrefix,'-as')]",
    "probes": "[parameters('loadBalancerSettings').probes]",
    "probesCount": "[length(variables('probes'))]",
    "ipConfigurations": {
      "public": "lb-frontendIPConfiguration-public",
      "internal": "lb-frontendIPConfiguration-internal"
    },
    "ipConfigurationPath": "[variables('ipConfigurations')[toLower(parameters('loadBalancerSettings').frontendIPConfigurations[0].loadBalancerType)]]",
    "collectorTemplate": "https://aoarmtest.blob.core.windows.net/templates/collector.json"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "feIPConfigurationTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('collectorTemplate')]" },
        "parameters": {
          "name": { "value": "[variables('ipConfigurationPath')]" },
          "source": { "value": "[parameters('loadBalancerSettings').frontendIPConfigurations]" },
          "context": {
            "value": {
              "vetName": "parameters('infrastructureSettings').vnetName"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "lbRulesTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('collectorTemplate')]" },
        "parameters": {
          "source": { "value": "[parameters('loadBalancerSettings').loadBalancingRules]" },
          "context": {
            "value": {
              "loadBalancerName": "[concat(parameters('baseName'), '-', variables('subnetNamePrefix'), '-ilb')]",
              "backendAddressPool": "[variables('internalLoadBalancer').backendPoolId]"
            }
          },
          "name": { "value": "lb-loadBalancingRules" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "probeTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('collectorTemplate')]" },
        "parameters": {
          "source": { "value": "[parameters('loadBalancerSettings').probes]" },
          "context": { "value": { } },
          "name": { "value": "lb-probes" }
        }
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2016-03-30",
      "location": "[variables('location')]",
      "name": "[variables('internalLoadBalancer').name]",
      "properties": {
        "frontendIPConfigurations": "[reference('feIPConfigurationTemplate').outputs.result.value]",
        "backendAddressPools": [
          {
            "name": "[variables('internalLoadBalancer').backendPoolName]"
          }
        ],
        "loadBalancingRules": "[reference('lbRulesTemplate').outputs.result.value]",
        "probes": "[reference('probeTemplate').outputs.result.value]"
      }
    }


  ],
  "outputs": {

  }
}
