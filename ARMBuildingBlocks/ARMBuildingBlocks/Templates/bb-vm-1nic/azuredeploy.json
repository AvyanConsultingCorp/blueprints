{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for the virtual machine."
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for the infrastructure."
      }
    }
  },

  "variables": {
    "location": "[resourceGroup().location]",
    "vmStorageAccountContainerName": "vhds",
    "vmNicName": "[concat(parameters('vmComputerName'),'-nic')]",
    "vmOSDiskName": "[concat(parameters('vmComputerName'),'-os.vhd')]",
    "vmDataDiskName": "[concat(parameters('vmComputerName'),'-data.vhd')]",
    "vmAvSetName": "[concat(parameters('vmComputerName'),'-as')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "apiVersion": "2015-06-15",
      "name": "[variables('vmAvSetName')]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM Availability Set" },
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('vmNicName')]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM NIC" },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": { "id": "[parameters('snid')]" }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmComputerName')]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM" },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('vmNicName'))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('vmAvSetName'))]"
      ],
      "properties": {
        "availabilitySet": { "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('vmAvSetName'))]" },
        "hardwareProfile": { "vmSize": "[parameters('vmSize')]" },
        "osProfile": {
          "computerName": "[parameters('vmComputerName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('osProfile').publisher]",
            "offer": "[parameters('osProfile').offer]",
            "sku": "[parameters('osProfile').sku]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[variables('vmOsDiskName')]",
            "vhd": { "uri": "[concat('http://', parameters('vhdStorageName'), '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('vmOSDiskName'))]" },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[variables('vmDataDiskName')]",
              "vhd": { "uri": "[concat('http://', parameters('vhdStorageName'), '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('vmDataDiskName'))]" },
              "diskSizeGB": "127",
              "createOption": "Empty",
              "lun": 0
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://', parameters('diagStorageName'), '.blob.core.windows.net')]"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNICName'))]" }
          ]
        }
      }
    }
  ],
  "outputs": {
    "vmName": {
      "type": "string",
      "value": "[parameters('vmComputerName')]"
    }
  }
}


