{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": { "type": "string" },
    "vmNamePrefix": { "type": "string" },
    "vmComputerName": {
      "type": "string",
      "maxLength": 13
    },
    "vmSize": {
      "type": "string",
      "allowedValues": [
        "Standard_DS1",
        "Standard_DS2",
        "Standard_DS3",
        "Standard_DS4",
        "Standard_DS11",
        "Standard_DS12",
        "Standard_DS13",
        "Standard_DS14",
        "Standard_GS1",
        "Standard_GS2",
        "Standard_GS3",
        "Standard_GS4",
        "Standard_GS5",
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "defaultValue": "Standard_DS3"
    },
    "subnetNamePrefix": { "type": "string" },
    "subnetId": { "type": "string" },
    "ilbIpAddress": { "type": "string" },
    "adminUsername": {
      "type": "string",
      "metadata": { "description": "Username for local admin account." }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": { "description": "Password for local admin account." }
    },
    "numberVMs": {
      "type": "int",
      "defaultValue": 2,
      "metadata": { "description": "Number of VMs in subnet." }
    }
  },
  "variables": {
    "uniqueString": "[uniqueString(resourceGroup().Id)]",
    "bb-ilb-backend-http-https": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Templates/bb-ilb-backend-http-https.json",
    "extensionTemplate": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Templates/bb-custom-linux-extension.json",
    "scriptUri": "https://raw.githubusercontent.com/mspnp/blueprints/master/ARMBuildingBlocks/ARMBuildingBlocks/Scripts/apache.sh",
    "scriptName": "apache.sh"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('bb-ilb-backend-http-https')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('bb-ilb-backend-http-https')]"
        },
        "parameters": {
          "baseName": { "value": "[parameters('baseName')]" },
          "vmNamePrefix": { "value": "vmNamePrefix" },
          "vmComputerName": { "value": "vmComputerName" },
          "vmSize": { "value": "[parameters('vmSize')]" },
          "subnetId": { "value": "[parameters('subnetId')]" },
          "ilbIpAddress": { "value": "[parameters('ilbIpAddress')]" },
          "osType": { "value": "Ubuntu" },
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "numberVMs": { "value": "[parameters('numberVMs')]" }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(parameters('baseName'),'-vm-apache-installation',variables('uniqueString'))]",
      "copy": {
        "name": "vmCount",
        "count": "[parameters('numberVMs')]"
      },

      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('extensionTemplate')]" },
        "parameters": {
          "vmName": { "value": "[concat(parameters('baseName'),'-',parameters('vmNamePrefix'),copyindex(1),'-vm')]" },
          "fileUri": { "value": "[variables('scriptUri')]" },
          "scriptName": { "value": "[variables('scriptName')]" }
        }
      },

      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments',variables('bb-ilb-backend-http-https'))]"
      ]
    }
  ],
  "outputs": {
  }
}
