{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": {
      "type": "string",
      "maxLength": 10,
      "metadata": { "description": "Prefix used for all resources created by this template." }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Infrastructure settings"
      }
    },
    "gatewaySettings": {
      "type": "object",
      "metadata": {
        "description": "Gateway settings"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vnetName": "[parameters('infrastructureSettings').vnetName]",
    "gatewayPublicIpAddressName": "[concat(parameters('baseName'),'-gw-pip')]",
    "gatewayName": "[concat(parameters('baseName'),'-gw')]",
    "gatewaySubnetAddressPrefix": "[parameters('gatewaySettings').subnetAddressPrefix]",
    "localGatewayName": "[concat(parameters('baseName'), '-lgw')]",
    "vnetOnPremConnName": "[concat(variables('vnetName'),'-vpnconn')]",
    "onPremisesAddressSpace": "[parameters('gatewaySettings').onPremisesAddressSpace]",
    "onPremisesPublicIpAddress": "[parameters('gatewaySettings').onPremisesPublicIpAddress]",
    "onPremisesSharedKey": "[parameters('gatewaySettings').onPremisesSharedKey]"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(variables('vnetName'), '/GatewaySubnet')]",
      "location": "[variables('location')]",
      "properties": {
        "addressPrefix": "[variables('gatewaySubnetAddressPrefix')]"
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('gatewayPublicIpAddressName')]",
      "location": "[variables('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/localNetworkGateways",
      "name": "[variables('localGatewayName')]",
      "location": "[variables('location')]",
      "properties": {
        "localNetworkAddressSpace": {
          "addressPrefixes": [ "[variables('onPremisesAddressSpace')]" ]
        },
        "gatewayIpAddress": "[variables('onPremisesPublicIpAddress')]"
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/virtualNetworkGateways",
      "name": "[variables('gatewayName')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'), '/subnets/GatewaySubnet')]",
        "[variables('gatewayPublicIpAddressName')]",
        "[variables('localGatewayName')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "vnetGatewayConfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), 'GatewaySubnet')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('gatewayPublicIpAddressName'))]"
              }
            }
          }
        ],
        "gatewayType": "Vpn",
        "vpnType": "RouteBased",
        "enableBgp": "false",
        "sku": {
          "name": "Standard",
          "tier": "Standard",
          "capacity": 2
        },
        "GatewayDefaultSite": {
          "id": "[resourceId('Microsoft.Network/localNetworkGateways', variables('localGatewayName'))]"
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "name": "[variables('vnetOnPremConnName')]",
      "type": "Microsoft.Network/connections",
      "location": "[variables('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworkGateways/', variables('gatewayName'))]",
        "[concat('Microsoft.Network/localNetworkGateways/', variables('localGatewayName'))]"
      ],
      "properties": {
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', variables('gatewayName'))]"
        },
        "localNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/localNetworkGateways', variables('localGatewayName'))]"
        },
        "connectionType": "IPsec",
        "routingWeight": 10,
        "sharedKey": "[variables('onPremisesSharedKey')]"
      }
    }
  ],
  "outputs": {
    "pip": {
      "type": "string",
      "value": "[reference(variables('gatewayPublicIpAddressName'))]"
    }
  }
}
