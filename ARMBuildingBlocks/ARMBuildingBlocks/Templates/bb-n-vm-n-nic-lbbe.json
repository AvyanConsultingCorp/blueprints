{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": { "type": "string" },
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines."
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure."
      }
    },
    "miscSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for other parameters such as load balancer backend pool, storage account names."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vmNicName": "[concat(parameters('miscSettings').vmName,'-nic')]",
    "vmOSDiskName": "[concat(parameters('miscSettings').vmName,'-os.vhd')]",
    "vmDataDiskName": "[concat(parameters('miscSettings').vmName,'-data.vhd')]",
    "vmStorageAccountContainerName": "vhds",
    "windowsOrlinux": "[toLower(parameters('virtualMachinesSettings').osType)]"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('vmNicName')]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM NIC" },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "loadBalancerBackendAddressPools": [ { "id": "[parameters('miscSettings').ilbbackendPoolId]" } ],
              "subnet": { "id": "[parameters('miscSettings').subnetId]" }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('miscSettings').vmName]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM" },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('vmNicName'))]"
      ],
      "properties": {
        "availabilitySet": { "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('infrastructureSettings').availSetName)]" },
        "hardwareProfile": { "vmSize": "[parameters('virtualMachinesSettings').size]" },
        "osProfile": {
          "computerName": "[parameters('miscSettings').vmName]",
          "adminUsername": "[parameters('virtualMachinesSettings').adminUsername]",
          "adminPassword": "[parameters('virtualMachinesSettings').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].publisher]",
            "offer": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].offer]",
            "sku": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].sku]",
            "version": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].version]"
          },
          "osDisk": {
            "name": "[variables('vmOSDiskName')]",
            "vhd": { "uri": "[concat('http://', parameters('miscSettings').storageAccountName, '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('vmOSDiskName'))]" },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "[variables('vmDataDiskName')]",
              "vhd": { "uri": "[concat('http://', parameters('miscSettings').storageAccountName, '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('vmDataDiskName'))]" },
              "diskSizeGB": "127",
              "createOption": "Empty",
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNicName'))]" }
          ]
        }
      }
    }
  ],
  "outputs": {
    "vmName": {
      "type": "string",
      "value": "[parameters('miscSettings').vmName]"
    }
  }
}