{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines."
      }
    }
  },
  "variables": {
    "avSetTemplates": [
      "[uri(deployment().properties.templateLink.uri, 'single-vm-n-nic-no-avset.json')]",
      "[uri(deployment().properties.templateLink.uri, 'single-vm-n-nic-avset.json')]"
    ],
    "templateToInvoke": "[variables('avSetTemplates')[mod(add(length(parameters('virtualMachinesSettings').availabilitySetName), 2), add(length(parameters('virtualMachinesSettings').availabilitySetName), 1))]]",
	"deploymentSuffixes": [
		"no-avset",
		"avset"
	],
	"suffixToUse": "[variables('deploymentSuffixes')[mod(add(length(parameters('virtualMachinesSettings').availabilitySetName), 2), add(length(parameters('virtualMachinesSettings').availabilitySetName), 1))]]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('virtualMachinesSettings').vmName, '-', variables('suffixToUse'))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('templateToInvoke')]" },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" }
        }
      }
    }
  ]
}