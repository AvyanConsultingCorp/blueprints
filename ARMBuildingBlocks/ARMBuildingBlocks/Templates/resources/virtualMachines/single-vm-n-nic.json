{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines."
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure."
      }
    },
    "context": {
      "type": "object",
      "metadata": {
        "description": "Settings for other parameters such as load balancer backend pool, storage account names."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vmProfile": {
      "nicName": "[concat(parameters('context').vmName, '-nic')]",
      "osDiskName": "[concat(parameters('context').vmName, '-os.vhd')]",
      "dataDiskName": "[concat(parameters('context').vmName, '-data.vhd')]",
      "storageAccountContainerName": "vhds"
    },
    "windowsOrlinux": "[toLower(parameters('virtualMachinesSettings').osType)]",
    "collectorTemplate": "https://aoarmtest.blob.core.windows.net/templates/collector.json",
    "replicatorTemplate": "https://aoarmtest.blob.core.windows.net/templates/replicator.json",
    "avSet": {
      "no": { },
      "yes": "availabilitySet"
    },
    "availabilitySetName": {
      "no": { },
      "yes": { "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('infrastructureSettings').availabilitySet.yes.name)]" }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('context').vmName, '-nic')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('collectorTemplate')]" },
        "parameters": {
          "parentResourceName": { "value": "[parameters('context').vmName]" },
          "source": { "value": "[parameters('virtualMachinesSettings').nics[parameters('context').vmIndex]]" },
          "context": {
            "value": {
              "vnetName": "[parameters('infrastructureSettings').vnetName]",
              "vmName": "[parameters('context').vmName]"
            }
          },
          "mapperTemplateUri": { "value": "https://aoarmtest.blob.core.windows.net/templates/virtualMachine-nic.json" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('context').vmName, '-dataDisk')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('replicatorTemplate')]" },
        "parameters": {
          "parentResourceName": { "value": "[parameters('context').vmName]" },
          "source": { "value": "[parameters('virtualMachinesSettings').dataDisks.properties]" },
          "context": {
            "value": {
              "storageAccount": {
                "name": "[parameters('context').storageAccount.vhd]",
                "container": "[variables('vmProfile').storageAccountContainerName]"
              },
              "vmName": "[parameters('context').vmName]"
            }
          },
          "copies": {
            "value": "[parameters('virtualMachinesSettings').dataDisks.count]"
          },
          "mapperTemplateUri": {
            "value": "https://aoarmtest.blob.core.windows.net/templates/virtualMachine-datadisk.json"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('context').vmName]",
      "location": "[variables('location')]",
      "tags": { "displayName": "VM" },
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'deploy-', parameters('context').vmName, '-nic')]",
        "[concat('Microsoft.Resources/deployments/', 'deploy-', parameters('context').vmName, '-dataDisk')]"
      ],
      "properties": {
        "[variable('avSet')[parameters('infrastructureSettings').availabilitySet.yesOrNo]]": "[variables('availabilitySetName')[parameters('infrastructureSettings').availabilitySet.yesOrNo]]",
        "hardwareProfile": { "vmSize": "[parameters('virtualMachinesSettings').size]" },
        "osProfile": {
          "computerName": "[parameters('context').vmName]",
          "adminUsername": "[parameters('virtualMachinesSettings').adminUsername]",
          "adminPassword": "[parameters('virtualMachinesSettings').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].publisher]",
            "offer": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].offer]",
            "sku": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].sku]",
            "version": "[parameters('virtualMachinesSettings').osProfile[variables('windowsOrlinux')].version]"
          },
          "osDisk": {
            "name": "[variables('vmProfile').osDiskName]",
            "vhd": { "uri": "[concat('http://', parameters('context').storageAccount.vhd, '.blob.core.windows.net/', variables('vmProfile').storageAccountContainerName, '/', variables('vmProfile').osDiskName)]" },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": "[reference(concat('Microsoft.Resources/deployments/', 'deploy-', parameters('context').vmName, '-dataDisk')).outputs.result.value]"
        },
        "networkProfile": {
          "networkInterfaces": "[reference(concat('Microsoft.Resources/deployments/', 'deploy-', parameters('context').vmName, '-nic')).outputs.result.value]"
        },

        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://', parameters('context').storageAccount.diagnostic, '.blob.core.windows.net')]"
          }
        }
      }
    }
  ]
}