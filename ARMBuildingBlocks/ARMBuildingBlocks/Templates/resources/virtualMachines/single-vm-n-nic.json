{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines."
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "needAvset": "[substring(parameters('virtualMachinesSettings').availabilitySetName,0, 1)]",
    "templateToInvoke": {
      "": "[uri(deployment().properties.templateLink.uri, concat('single-vm-n-nic-no-avset.json'))]",
      "avset": "[uri(deployment().properties.templateLink.uri, concat('single-vm-n-nic-avset.json'))]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', variables('templateToInvoke'))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('templateToInvoke')[length(variables('needAvset'))]]" },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" }
        }
      }
    }
  ]
}