{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source": { "type": "object" },
    "context": { "type": "object" },
    "state": {
      "type": "array",
      "defaultValue": [ ]
    },
    "iteration": {
      "type": "int",
      "defaultValue": 0
    }
  },
  "variables": {
    "nicTemplates": {
      "false": "[uri(deployment().properties.templateLink.uri, 'virtualMachine-nic-no-public-ip.json')]",
      "true": "[uri(deployment().properties.templateLink.uri, 'virtualMachine-nic-public-ip.json')]"
    },
    "templateToInvoke": "[variables('nicTemplates')[parameters('source').isPublic]]",
    "deploymentSuffixes": {
      "false": "no-public-ip",
      "true": "public-ip"
    },
    "suffixToUse": "[variables('deploymentSuffixes')[parameters('source').isPublic]]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('source').name, '-', variables('suffixToUse'))]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('templateToInvoke')]" },
        "parameters": {
          "source": { "value": "[parameters('source')]" },
          "context": { "value": "[parameters('context')]" },
          "state": { "value": "[parameters('state')]" },
          "iteration": { "value": "[parameters('iteration')]" }
        }
      }
    }
  ],
  "outputs": {
    "result": {
      "type": "array",
      "value": "[reference(concat('deploy-', parameters('source').name, '-', variables('suffixToUse'))).outputs.collection.value]"
    }
  }
}
