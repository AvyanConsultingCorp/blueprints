{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source": { "type": "object" },
    "context": { "type": "object" },
    "state": {
      "type": "array",
      "defaultValue": [ ]
    },
    "iteration": {
      "type": "int",
      "defaultValue": 0
    }
  },
  "variables": {
    "ipAllocationMethod": "[parameters('source').ipAllocation.staticOrDynamic]",
    "ipAddress": {
      "static": "[concat(split(parameters('source').ipAllocation.ipAddress,'.')[0],split(parameters('source').ipAllocation.ipAddress,'.')[1],split(parameters('source').ipAllocation.ipAddress,'.')[2], '.', add(int(split(parameters('source').ipAllocation.ipAddress,'.')[3]), parameters('iteration')))]",
      "dynamic": ""
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('context').vmName, '-nic', parameters('iteration'))]",
      "properties": {
        "mode": "Incremental",
        "parameters": { },
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": { },
          "variables": { },
          "resources": [
            {
              "apiVersion": "2016-03-30",
              "type": "Microsoft.Network/networkInterfaces",
              "name": "[concat(parameters('context').vmName, '-nic', parameters('iteration'))]",
              "location": "[resourceGroup().location]",
              "properties": {
                "ipConfigurations": [
                  {
                    "name": "ipconfig1",
                    "properties": {
                      "privateIPAllocationMethod": "[variables('ipAllocationMethod')]",
                      "subnet": { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('context').vnetName, parameters('source').subnetName)]" },
                      "privateIPAddress": "[variables('ipAddress')[variables('ipAllocationMethod')]]"
                    }
                  }
                ]
              },
              "tags": {
                "displayName": "nic"
              }
            }
          ],
          "outputs": {
            "instance": {
              "type": "array",
              "value": [
                {
                  "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('context').vmName, '-nic', parameters('iteration')))]",
                  "properties": {
                    "primary": "[parameters('source').isPrimary]"
                  }
                }
              ]
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "collection": {
      "type": "array",
      "value": "[concat(parameters('state'), reference(concat('deploy-', parameters('context').vmName, '-nic', parameters('iteration'))).outputs.instance.value)]"
    }
  }
}
