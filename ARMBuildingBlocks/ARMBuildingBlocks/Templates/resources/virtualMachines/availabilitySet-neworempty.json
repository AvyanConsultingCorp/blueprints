{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "availabilitySetSettings": { "type": "object" },
    "vmCount": { "type": "int" }
  },
  "variables": {
    "avSetTemplate": "[variables('avSetTemplates')[mod(add(sub(parameters('vmCount'), 1), 2), add(sub(parameters('vmCount'), 1), 1))]]",
    "avSetTemplates": [
      "[uri(deployment().properties.templateLink.uri, 'availabilitySet-empty.json')]",
      "[uri(deployment().properties.templateLink.uri, 'availabilitySet-new.json')]"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(parameters('availabilitySetSettings').name, '-assettings')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('avSetTemplate')]" },
        "parameters": {
          "availabilitySetSettings": { "value": "[parameters('availabilitySetSettings')]" }
        }
      }
    }
  ],
  "outputs": {
    "availabilitySetName": {
      "value": "[reference(concat(parameters('availabilitySetSettings').name, '-assettings')).outputs.availabilitySetName.value]",
      "type": "string"
    }
  }
}
