{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source": { "type": "object" },
    "context": { "type": "object" },
    "state": {
      "type": "array",
      "defaultValue": [ ]
    },
    "iteration": {
      "type": "int",
      "defaultValue": 0
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(parameters('context').vmName, '-datadisk', parameters('iteration'), '-template')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": { },
          "resources": [ ],
          "outputs": {
            "instance": {
              "type": "array",
              "value": [
                {
                  "name": "[concat('dataDisk', add(parameters('iteration'), 1))]",
                  "diskSizeGB": "[parameters('source').diskSizeGB]",
                  "lun": "[parameters('iteration')]",
                  "vhd": { "uri": "[concat('http://', parameters('context').storageAccounts.vhd, '.blob.core.windows.net/vhds/', parameters('context').vmName, '-dataDisk', add(parameters('iteration'), 1), '.vhd')]" },
                  "caching": "[parameters('source').caching]",
                  "createOption": "[parameters('source').createOption]"
                }
              ]
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "collection": {
      "type": "array",
      "value": "[concat(parameters('state'), reference(concat(parameters('context').vmName, '-datadisk', parameters('iteration'), '-template')).outputs.instance.value)]"
    }
  }
}
