{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source": { "type": "object" },
    "context": { "type": "object" },
    "state": {
      "type": "array",
      "defaultValue": [ ]
    },
    "iteration": {
      "type": "int",
      "defaultValue": 0
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('source').name, '-pip')]",
      "properties": {
        "publicIPAllocationMethod": "[parameters('source').ipConfigurations[0].privateIPAllocationMethod]"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('source').name)]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/',parameters('source').name, '-pip')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": { },
          "resources": [
            {
              "apiVersion": "2016-03-30",
              "type": "Microsoft.Network/networkInterfaces",
              "name": "[parameters('source').name]",
              "location": "[resourceGroup().location]",
              "properties": {
                "ipConfigurations": "[parameters('source').ipConfigurations]"
              },
              "tags": {
                "displayName": "nic"
              }
            }
          ],
          "outputs": {
            "instance": {
              "type": "array",
              "value": [
                {
                  "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('source').name)]",
                  "properties": {
                    "primary": "[parameters('source').primary]"
                  }
                }
              ]
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-03-30",
      "name": "[concat('update-', parameters('source').name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'deploy-', parameters('source').name)]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[parameters('source').ipConfigurations[0].name]",
            "properties": {
              "privateIPAllocationMethod": "[parameters('source').ipConfigurations[0].properties.privateIPAllocationMethod]",
              "subnet": {
                "id": "[parameters('source').ipConfigurations[0].properties.subnet.id]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('source').name, '-pip'))]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "collection": {
      "type": "array",
      "value": "[concat(parameters('state'), reference(concat('deploy-', parameters('source').name)).outputs.instance.value)]"
    }
  }
}
