{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachinesSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for virtual machines"
      }
    },
    "infrastructureSettings": {
      "type": "object",
      "metadata": {
        "description": "Settings for infrastructure"
      }
    },
    "context": {
      "type": "object",
      "metadata": {
        "description": "Settings for other parameters such as load balancer backend pool, storage account names."
      }
    }

  },
  "variables": {
    "location": "[resourceGroup().location]",
    "storageAccount": {
      "diagnostic": "[toLower(concat(parameters('virtualMachinesSettings').namePrefix, uniqueString(resourceGroup().id), 'diag'))]",
      "vhd": "[toLower(concat(parameters('virtualMachinesSettings').namePrefix,parameters('virtualMachinesSettings').computerNamePrefix,'vm', substring(uniquestring(resourceGroup().id), 0, 5), 'st'))]"
    },
    "path": {
      "vmTemplate": "[uri(deployment().properties.templateLink.uri,'single-vm-n-nic.json')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat('deploy-', parameters('virtualMachinesSettings').namePrefix, '-vm-', add(parameters('context').startCount, copyindex()))]",
      "copy": {
        "name": "vmLoop",
        "count": "[parameters('virtualMachinesSettings').count]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('path').vmTemplate]"
        },
        "parameters": {
          "virtualMachinesSettings": { "value": "[parameters('virtualMachinesSettings')]" },
          "infrastructureSettings": { "value": "[parameters('infrastructureSettings')]" },
          "context": {
            "value": {
              "storageAccount": {
                "diagnostic": "app0devdiag",
                "vhd": "app0devvm1st"
              },
              "vmName": "[concat(parameters('virtualMachinesSettings').namePrefix,'-',parameters('virtualMachinesSettings').computerNamePrefix,'-vm', add(parameters('context').startCount, copyindex()))]"
            }
          }
        }
      }
    }
  ]
}
