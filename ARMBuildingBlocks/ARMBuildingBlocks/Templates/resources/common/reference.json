{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscription": {
      "type": "string",
      "defaultValue": ""
    },
    "resourceGroup": {
      "type": "string",
      "defaultValue": ""
    },
    "resourceType": {
      "type": "string"
    },
    "resourceName1": {
      "type": "string"
    },
    "resourceName2": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {
    "subscriptions": [
      "[subscription().subscriptionId]",
      "[parameters('subscription')]"
    ],
    "resourceGroups": [
      "[resourceGroup().name]",
      "[parameters('resourceGroup')]"
    ],
    "subscription": "[variables('subscriptions')[mod(add(length(parameters('subscription')), 2), add(length(parameters('subscription')), 1))]]",
    "resourceGroup": "[variables('resourceGroups')[mod(add(length(parameters('resourceGroup')), 2), add(length(parameters('resourceGroup')), 1))]]",
    "referenceTemplates": [
      "referenceOneParameter.json",
      "referenceTwoParameters.json"
    ],
    "templateName": "[concat('reference-', parameters('resourceName1'), parameters('resourceName2'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('templateName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, variables('referenceTemplates')[mod(add(length(parameters('resourceName2')), 2), add(length(parameters('resourceName2')), 1))])]"
        },
        "parameters": {
          "subscription": {
            "value": "[variables('subscription')]"
          },
          "resourceGroup": {
            "value": "[variables('resourceGroup')]"
          },
          "resourceType": {
            "value": "[parameters('resourceType')]"
          },
          "resourceName1": {
            "value": "[parameters('resourceName1')]"
          },
          "resourceName2": {
            "value": "[parameters('resourceName2')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "reference": {
      "type": "object",
      "value": "[reference(variables('templateName')).outputs.reference.value]"
    }
  }
}
