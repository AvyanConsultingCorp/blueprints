{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source": { "type": "array" },
    "context": { "type": "object" },
    "name": { "type": "string" },
    "state": {
      "type": "array",
      "defaultValue": [ ]
    }
  },
  "variables": {
    "count": "[length(parameters('source'))]",
    "templateBaseName": "[parameters('name')]",
    "mapperTemplates": {
      "lb-probes": "https://aoarmtest.blob.core.windows.net/templates/lb-probes.json",
      "lb-loadBalancingRules": "https://aoarmtest.blob.core.windows.net/templates/lb-loadBalancingRules.json",
      "lb-frontendIPConfiguration-internal": "https://aoarmtest.blob.core.windows.net/templates/lb-frontendIPConfiguration-internal.json",
      "lb-frontendIPConfiguration-public": "https://aoarmtest.blob.core.windows.net/templates/lb-frontendIPConfiguration-public.json",
      "routeTable-routes": "[uri(deployment().properties.templateLink.uri, 'routeTable-routes.json')]",
      "vm-nics": "https://aoarmtest.blob.core.windows.net/templates/bb-nic.json",
      "networkSecurityGroup-securityRules": "[uri(deployment().properties.templateLink.uri, 'networkSecurityGroup-securityRules.json')]",
      "vnet-subnet": "https://aoarmtest.blob.core.windows.net/templates/virtualNetwork-subnets.json"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('templateBaseName'), '-template0')]",
      "properties": {
        "mode": "Incremental",
        "parameters": { },
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": { },
          "variables": { },
          "resources": [],
          "outputs": {
            "collection": {
              "type": "array",
              "value": "[parameters('state')]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('templateBaseName'), '-template', copyindex(1))]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('templateBaseName'), '-template', copyindex())]"
      ],
      "copy": {
        "name": "iterator",
        "count": "[variables('count')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('mapperTemplates')[parameters('name')]]" },
        "parameters": {
          "source": { "value": "[parameters('source')[copyindex()]]" },
          "context": { "value": "[parameters('context')]" },
          "state": { "value": "[reference(concat(variables('templateBaseName'), '-template', copyindex())).outputs.collection.value]" },
          "copyIndex": { "value": "[copyindex()]" }
        }
      }
    }
  ],
  "outputs": {
    "result": {
      "type": "array",
      "value": "[reference(concat(variables('templateBaseName'), '-template', variables('count'))).outputs.collection.value]"
    }
  }
}
