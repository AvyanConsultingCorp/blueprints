{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "infrastructureSettings": {
      "type": "object"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/localNetworkGateways",
      "name": "[parameters('infrastructureSettings').connection.localNetworkGateway.name]",
      "location": "[resourceGroup().location]",
      "properties": {
        "localNetworkAddressSpace": {
          "addressPrefixes": "[parameters('infrastructureSettings').connection.localNetworkGateway.addressPrefixes]"
        },
        "gatewayIpAddress": "[parameters('infrastructureSettings').connection.localNetworkGateway.ipAddress]"
      }
    }
  ],
  "outputs": {
    "properties": {
      "type": "object",
      "value": {
        "connectionType": "IPsec",
        "routingWeight": 10,
        "sharedKey": "[parameters('infrastructureSettings').connection.sharedKey]",
        "virtualNetworkGateway1": {
          "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('infrastructureSettings').connection.virtualNetworkGateway1.name)]"
        },
        "localNetworkGateway2": {
          "id": "[resourceId('Microsoft.Network/localNetworkGateways', parameters('infrastructureSettings').connection.localNetworkGateway.name)]"
        }
      }
    }
  }
}
