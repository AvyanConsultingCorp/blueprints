{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkSettings": {
      "type": "object"
    },
    "networkSecurityGroupSettings": {
      "type": "object"
    }
  },
  "variables": {
    "vnetName": "[parameters('virtualNetworkSettings').name]",
    "subnets": "[parameters('networkSecurityGroupSettings').subnets]",
    "networkSecurityGroupName": "[parameters('networkSecurityGroupSettings').name]",
    "networkSecurityGroupSecurityRules": "[parameters('networkSecurityGroupSettings').securityRules]",
    "collectorTemplate": "[uri(deployment().properties.templateLink.uri, '../common/collector.json')]",
    "referenceTemplate": "[uri(deployment().properties.templateLink.uri, '../common/reference.json')]",
    "nsgRulesTemplateName": "[concat(variables('networkSecurityGroupName'), '-rules')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('nsgRulesTemplateName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": { "uri": "[variables('collectorTemplate')]" },
        "parameters": {
          "source": {
            "value": "[variables('networkSecurityGroupSecurityRules')]"
          },
          "context": {
            "value": { }
          },
          "mapperTemplateUri": {
            "value": "[uri(deployment().properties.templateLink.uri, 'networkSecurityGroup-securityRules.json')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('networkSecurityGroupName')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": "[reference(variables('nsgRulesTemplateName')).outputs.result.value]"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('subnets')[copyIndex()], '-ref')]",
      "copy": {
        "name": "subnet-reference-iterator",
        "count": "[length(variables('subnets'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('referenceTemplate')]"
        },
        "parameters": {
          "resourceType": {
            "value": "Microsoft.Network/virtualNetworks/subnets"
          },
          "resourceName1": {
            "value": "[variables('vnetName')]"
          },
          "resourceName2": {
            "value": "[variables('subnets')[copyIndex()]]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('networkSecurityGroupName'), '-sn-0')]",
      "dependsOn": [
        "[variables('networkSecurityGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "parameters": { },
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": { },
          "variables": { },
          "resources": [ ],
          "outputs": { }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(variables('networkSecurityGroupName'), '-sn-', copyindex(1))]",
      "dependsOn": [
        "[concat(variables('networkSecurityGroupName'), '-sn-', copyindex())]"
      ],
      "copy": {
        "name": "[concat(variables('networkSecurityGroupName'), '-sn-iterator')]",
        "count": "[length(variables('subnets'))]"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
          },
          "variables": {
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2016-03-30",
              "name": "[concat(variables('vnetName'), '/', variables('subnets')[copyIndex()])]",
              "location": "[resourceGroup().location]",
              "properties": {
                "addressPrefix": "[reference(concat(variables('subnets')[copyIndex()], '-ref')).outputs.reference.value.properties.addressPrefix]",
                "networksecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]"
                }
              }
            }
          ],
          "outputs": {
          }
        },
        "parameters": {
        }
      }
    }
  ],
  "outputs": {
  }
}
