{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "Description": "The region to deploy the resources into"
      }
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "Description": "The name of the Virtual Network to Create"
      }
    },
    "vnetAddressSpace": {
      "type": "array",
      "metadata": {
        "Description": "The address range of the new VNET in CIDR format"
      }
    },
    "dnsServers": {
      "type": "array",
      "metadata": {
        "Description": "The DNS address(es) of the DNS Server(s) used by the VNET"
      }
    },
    "vnetFrontendSubnet": {
      "type": "array",
      "metadata": {
        "description": "Frontend subnet name and prefix."
      }
    },
    "vnetGatewaySubnet": {
      "type": "array",
      "metadata": {
        "description": "Gateway subnet name and prefix."
      }
    },
    "vnetBackendSubnetDc": {
      "type": "array",
      "metadata": {
        "description": "Backend domain controller subnet name and prefix."
      }
    },
    "vnetBackendSubnetSql": {
      "type": "array",
      "metadata": {
        "description": "Backend sql subnet name and prefix."
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('location')]",
      "apiVersion": "2016-03-30",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressSpace')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": "[parameters('dnsServers')]"
        },
        "subnets": [
          {
            "name": "[parameters('vnetFrontendSubnet')[0]]",
            "properties": {
              "addressPrefix": "[parameters('vnetFrontendSubnet')[1]]"
            }
          },
          {
            "name": "[parameters('vnetBackendSubnetDc')[0]]",
            "properties": {
              "addressPrefix": "[parameters('vnetBackendSubnetDc')[1]]"
            }
          },
          {
            "name": "[parameters('vnetBackendSubnetSql')[0]]",
            "properties": {
              "addressPrefix": "[parameters('vnetBackendSubnetSql')[1]]"
            }
          },
          {
            "name": "[parameters('vnetGatewaySubnet')[0]]",
            "properties": {
              "addressPrefix": "[parameters('vnetGatewaySubnet')[1]]"
            }
          }
        ]
      },
      "tags": {
        "displayName": "Virtual network with Dns"
      }
    }
  ]
}
