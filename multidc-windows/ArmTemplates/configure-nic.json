{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location of the nic to create or update."
      }
    },
    "nicName": {
      "type": "string",
      "metadata": {
        "Description": "The name of the nic to create or update."
      }
    },
    "ipConfigurations": {
      "type": "array",
      "metadata": {
        "Description": "The IP configurations of the nic."
      }
    },
    "dnsServers": {
      "type": "array",
      "metadata": {
        "Description": "The dns servers of the nic."
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('nicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "properties": {
        "ipConfigurations": "[parameters('ipConfigurations')]",
        "dnsSettings": {
          "dnsServers": "[parameters('dnsServers')]"
        }
      },
      "tags": {
        "displayName": "nic-with-dns"
      }
    }
  ]
}
